    <script>
        // Data Grup Facebook
        const facebookGroups = [
            "https://www.facebook.com/groups/527574474067445",
            "https://www.facebook.com/groups/1515571062072333/buy_sell_discussion",
            "https://www.facebook.com/groups/424561451062924/buy_sell_discussion",
            "https://www.facebook.com/groups/744234105620854/buy_sell_discussion",
            "https://www.facebook.com/groups/1060389500826790",
            "https://www.facebook.com/groups/1729918277275906/buy_sell_discussion",
            "https://www.facebook.com/groups/1431901727109664/buy_sell_discussion",
            "https://www.facebook.com/groups/1695737604019910",
            "https://www.facebook.com/groups/1634984163405391/buy_sell_discussion",
            "https://www.facebook.com/groups/312606212267575/buy_sell_discussion",
            "https://www.facebook.com/groups/1415145062121908/buy_sell_discussion",
            "https://www.facebook.com/groups/2560913867495115"
        ];

        const STORAGE_PREFIX = "sales_monitor_"; // Prefix untuk kunci localStorage
        const RESET_PASSWORD = "M@diun23"; // Password Reset

        // 1. Fungsi untuk mengisi tabel Facebook secara dinamis
        function populateFacebookTable() {
            const tableBody = document.getElementById('facebook-links');
            facebookGroups.forEach((url, index) => {
                const row = tableBody.insertRow();
                // Sel untuk URL Grup
                const cellGroup = row.insertCell(0);
                cellGroup.innerHTML = `<a href="${url}" target="_blank">${url}</a>`;
                
                // Sel untuk Input Link Postingan
                const cellInput = row.insertCell(1);
                const inputKey = `fb-link-${index}`;
                cellInput.innerHTML = `<input type="url" data-key="${inputKey}" placeholder="Masukkan link postingan di sini">`;
            });
        }

        // 2. Fungsi untuk menyimpan data ke localStorage
        function saveInput(event) {
            const element = event.target;
            const key = element.getAttribute('data-key');
            let value;

            if (element.type === 'checkbox') {
                value = element.checked;
            } else {
                value = element.value;
            }

            if (key) {
                localStorage.setItem(STORAGE_PREFIX + key, value);
            }
        }

        // 3. Fungsi untuk memuat data dari localStorage
        function loadData() {
            // Muat data untuk semua input dan checkbox
            document.querySelectorAll('[data-key]').forEach(element => {
                const key = element.getAttribute('data-key');
                const storedValue = localStorage.getItem(STORAGE_PREFIX + key);

                if (storedValue !== null) {
                    if (element.type === 'checkbox') {
                        // Untuk checkbox, nilainya adalah boolean
                        element.checked = storedValue === 'true';
                    } else {
                        // Untuk input teks/url
                        element.value = storedValue;
                    }
                }
            });
        }

        // 4. Fungsi untuk menangani reset data
        function resetData() {
            const password = prompt("Masukkan password untuk mereset semua data:");
            if (password === RESET_PASSWORD) {
                // Hapus semua item yang diawali dengan prefix kita
                Object.keys(localStorage).forEach(key => {
                    if (key.startsWith(STORAGE_PREFIX)) {
                        localStorage.removeItem(key);
                    }
                });
                // Muat ulang data (untuk mengosongkan formulir)
                location.reload(); 
                alert("‚úÖ Semua data monitoring telah berhasil direset!");
            } else if (password !== null) {
                alert("‚ùå Password salah. Data tidak direset.");
            }
            // Jika pengguna menekan 'Cancel', tidak terjadi apa-apa
        }

        // 5. Inisialisasi saat dokumen dimuat
        document.addEventListener('DOMContentLoaded', () => {
            populateFacebookTable(); // Buat baris tabel Facebook
            loadData(); // Muat data yang tersimpan

            // Tambahkan event listener untuk semua input yang memiliki data-key
            document.querySelectorAll('[data-key]').forEach(element => {
                element.addEventListener('change', saveInput);
                element.addEventListener('input', saveInput); // Untuk input teks/url saat mengetik
            });
        });
    </script>
